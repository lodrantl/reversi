#:kivy 1.9.1

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Reversi'
            font_size: 80
        Button:
            text: 'Single player'
            on_press: root.manager.current = 'settings'
        Button:
            text: 'Two players'
            on_press: app.start_two_players()
        Button:
            text: 'Game rules'
            on_press: root.manager.current = 'rules'
        Button:
            text: 'Quit'
            on_press: app.stop()

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Match settings'
            font_size: 20
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Play as:'
            ToggleButton:
                text: 'White'
                group: 'color'
                state: 'down'
            ToggleButton:
                text: 'Black'
                group: 'color'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Difficulty:'
            ToggleButton:
                text: 'Easy'
                group: 'diff'
            ToggleButton:
                text: 'Medium'
                group: 'diff'
                state: 'down'
            ToggleButton:
                text: 'Hard'
                group: 'diff'
        BoxLayout:
            Button:
                text: 'Back'
                on_press: root.manager.current = 'menu'
            Button:
                text: 'Play'
                on_press: app.start_single_player()

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: 'Reversi'
            font_size: 20
            size_hint_y: None
            height: 25
        AnchorLayout:
            size_hint_y: None
            height: self.parent.height-70
            Board:
        Button:
            text: 'End game'
            on_press: app.end_game()
            size_hint_y: None
            height: 25

<Tile>
    source: self.state + '.png'
    size_hint: 0.125, 0.125

<Board>
    size_hint: None, None
    size: min(self.parent.width, self.parent.height), min(self.parent.width, self.parent.height)

<RulesScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Game rules'
            font_size: 20
        Label:
            text: 'TODO: indepth rule explanation'
            font_size: 12
        Button:
            text: 'Back'
            on_press: root.manager.current = 'menu'