#:kivy 1.9.1

<MenuScreen>:
    RelativeLayout:
        canvas:
            Color:
                rgba: 0.5, 0, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Reversi'
            font_size: 80
            size_hint_y: None
            height: '100sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        NajinGumb:
            text: 'Single player'
            on_release: root.manager.current = 'settings'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        NajinGumb:
            text: 'Two players'
            on_press: app.start_two_players()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        NajinGumb:
            text: 'Game rules'
            on_press: root.manager.current = 'rules'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        NajinGumb:
            text: 'Quit'
            on_press: app.stop()
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Match settings'
            font_size: 20
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Play as:'
            ToggleButton:
                text: 'White'
                group: 'color'
                state: 'down'
            ToggleButton:
                text: 'Black'
                group: 'color'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Difficulty:'
            ToggleButton:
                text: 'Easy'
                group: 'diff'
            ToggleButton:
                text: 'Medium'
                group: 'diff'
                state: 'down'
            ToggleButton:
                text: 'Hard'
                group: 'diff'
        BoxLayout:
            Button:
                text: 'Back'
                on_press: root.manager.current = 'menu'
            Button:
                text: 'Play'
                on_press: app.start_single_player()

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Label:
            text: 'Reversi'
            font_size: 20
            size_hint_y: None
            height: 25
        AnchorLayout:
            size_hint_y: None
            height: self.parent.height-70
            Board:
        Button:
            text: 'End game'
            on_press: app.end_game()
            size_hint_y: None
            height: 25

<Tile>
    source: self.state + '.png'
    size_hint: 0.125, 0.125

<Board>
    size_hint: None, None
    size: min(self.parent.width, self.parent.height), min(self.parent.width, self.parent.height)

<RulesScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Game rules'
            font_size: 20
        Label:
            text: 'TODO: indepth rule explanation'
            font_size: 12
        Button:
            text: 'Back'
            on_press: root.manager.current = 'menu'

<NajinGumb@Button>:
    color: 0, 0, 0, 1
    size_hint: None, None
    size: '250sp', '100sp'
    font_size: '25sp'
    background_normal: 'artwork/gumb.png'
    background_down: 'artwork/gumb_pritisnjen.png'
