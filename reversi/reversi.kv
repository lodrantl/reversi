#:kivy 1.9.1

<MeniZaslon>:
    RelativeLayout:
        canvas:
            Color:
                rgba: 0.5, 0, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'grafika/naslov.png'
            size_hint: None, None
            size: '447sp', '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            mipmap: True
        LepGumb:
            text: 'En igralec'
            on_release: root.manager.current = 'nastavitve'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        LepGumb:
            text: 'Dva igralca'
            on_release: app.zacni_dva_igralca()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        LepGumb:
            text: 'Pravila'
            on_release: root.manager.current = 'pravila'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        LepGumb:
            text: 'Izhod'
            on_release: app.stop()
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}

<NastavitveZaslon>:
    RelativeLayout:
        canvas:
            Color:
                rgba: 0.5, 0, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'grafika/nastavi.png'
            size_hint: None, None
            size: '580sp', '60sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.92}
            mipmap: True
        Label:
            text: '[color=#ffffff][b]Igraj kot:[/b][/color]'
            markup: True
            font_size: '30sp'
            size_hint: 0.3, 0.28
            pos_hint: {'x': 0, 'center_y': 0.7}
        AnchorLayout:
            size_hint: 0.7, 0.28
            pos_hint: {'x': 0.3, 'center_y': 0.7}
            BoxLayout:
                size_hint_y: None
                height: '100sp'
                orientation: 'horizontal'
                LepRadio:
                    text: 'beli'
                    group: 'barva'
                    state: 'down'
                LepRadio:
                    text: '\u010Drni'
                    group: 'barva'
        Label:
            text: '[color=#ffffff][b]Te\u017Eavnost:[/b][/color]'
            markup: True
            font_size: '30sp'
            size_hint: 0.3, 0.28
            pos_hint: {'x': 0, 'center_y': 0.42}
        AnchorLayout:
            size_hint: 0.7, 0.28
            pos_hint: {'x': 0.3, 'center_y': 0.42}
            BoxLayout:
                size_hint_y: None
                height: '100sp'
                orientation: 'horizontal'
                LepRadio:
                    text: 'lahko'
                    group: 'tezavnost'
                LepRadio:
                    text: 'srednje'
                    group: 'tezavnost'
                    state: 'down'
                LepRadio:
                    text: 'te\u017Eko'
                    group: 'tezavnost'
        LepGumb:
            text: 'Nazaj'
            on_release: root.manager.current = 'meni'
            pos_hint: {'center_x': 0.25, 'center_y': 0.14}
        LepGumb:
            text: 'Igraj'
            on_release: app.zacni_dva_igralca()
            pos_hint: {'center_x': 0.75, 'center_y': 0.14}

<IgraZaslon>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '10sp'
        Label:
            text: 'Reversi'
            font_size: '20sp'
            size_hint_y: None
            height: '25sp'
        AnchorLayout:
            size_hint_y: None
            height: self.parent.height-70
            Board:
        Button:
            text: 'End game'
            on_release: app.koncaj_igro()
            size_hint_y: None
            height: '25sp'

<Polje>
    source: self.stanje + '.png'
    size_hint: 0.125, 0.125

<Board>
    size_hint: None, None
    size: min(self.parent.width, self.parent.height), min(self.parent.width, self.parent.height)

<PravilaZaslon>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Pravila'
            font_size: '20sp'
        Label:
            text: 'TODO: indepth rule explanation'
            font_size: '12sp'
        Button:
            text: 'Back'
            on_release: root.manager.current = 'meni'

<LepGumb@Button>:
    color: 0, 0, 0, 1
    size_hint: None, None
    size: '231sp', '100sp'
    font_size: '25sp'
    background_normal: 'grafika/gumb.png'
    background_down: 'grafika/gumb_pritisnjen.png'

<LepRadio@ToggleButton>:
    color: 0, 0, 0, 1
    size_hint: None, None
    size: '154sp', '100sp'
    font_size: '25sp'
    background_normal: 'grafika/radio.png'
    background_down: 'grafika/radio_izbran.png'
