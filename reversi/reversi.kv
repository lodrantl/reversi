<LepRadio@ToggleButton>:
    color: 0, 0, 0, 1
    size_hint: None, None
    size: '154sp', '100sp'
    font_size: '25sp'
    background_normal: 'grafika/radio.png'
    background_down: 'grafika/radio_izbran.png'
    mipmap: True

<LepGumb>:
    color: 0, 0, 0, 1
    size_hint: None, None
    size: '231sp', '100sp'
    font_size: '25sp'
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: app.barva_primarna
        RoundedRectangle:
            pos: self.pos[0] + 5, self.pos[1] + 5
            size: self.size[0]-10, self.size[1]-10
        Color:
            rgba: self.notranja_barva
        RoundedRectangle:
            pos: self.pos[0] + 10, self.pos[1] + 10
            size: self.size[0]-20, self.size[1]-20


<Zeton@Image>:
    size_hint: None, None
    size: '65sp', '65sp'

<BarvniLabel@Label>:
    background_color: 0.5, 0.5, 0.5, 1
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos[0] + sp(10), self.pos[1]
            size: self.size[0] - sp(20), self.size[1] - sp(5)

