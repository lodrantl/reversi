#:kivy 1.9.1
#:import Stanje reversi.Stanje

#:set barva_primarna [.5, 0, .5, 1]
#:set barva_sekundarna [0, .5, 0, 1]


<MeniZaslon>:
    RelativeLayout:
        canvas:
            Color:
                rgba: barva_primarna
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'grafika/naslov.png'
            size_hint: None, None
            size: '447sp', '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            mipmap: True
        LepGumb:
            text: 'En igralec'
            on_release: root.manager.current = 'nastavitve'     ### popravi ime
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        LepGumb:
            text: 'Dva igralca'
            on_release: app.zacni_dva_igralca()
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        LepGumb:
            text: 'Pravila'
            on_release: root.manager.current = 'pravila'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        LepGumb:
            text: 'Izhod'
            on_release: app.stop()
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}

<NastavitveZaslon>:
    RelativeLayout:
        canvas:
            Color:
                rgba: 0.5, 0, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: 'grafika/nastavi.png'
            size_hint: None, None
            size: '580sp', '60sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.92}
            mipmap: True
        Label:
            text: '[color=#ffffff][b]  Igraj kot:[/b][/color]'
            markup: True
            font_size: '30sp'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': 0, 'center_y': 0.7}
        AnchorLayout:
            size_hint: 0.7, 0.28
            pos_hint: {'x': 0.3, 'center_y': 0.7}
            BoxLayout:
                size_hint_y: None
                height: '100sp'
                orientation: 'horizontal'
                LepRadio:
                    text: 'beli'
                    group: 'barva'
                    state: 'down'
                LepRadio:
                    text: '\u010Drni'
                    group: 'barva'
        Label:
            text: '[color=#ffffff][b]  Te\u017Eavnost:[/b][/color]'
            markup: True
            font_size: '30sp'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': 0, 'center_y': 0.42}
        AnchorLayout:
            size_hint: 0.7, 0.28
            pos_hint: {'x': 0.3, 'center_y': 0.42}
            BoxLayout:
                size_hint_y: None
                height: '100sp'
                orientation: 'horizontal'
                LepRadio:
                    text: 'lahko'
                    group: 'tezavnost'
                LepRadio:
                    text: 'srednje'
                    group: 'tezavnost'
                    state: 'down'
                LepRadio:
                    text: 'te\u017Eko'
                    group: 'tezavnost'
        LepGumb:
            text: 'Nazaj'
            on_release: root.manager.current = 'meni'
            pos_hint: {'center_x': 0.25, 'center_y': 0.14}
        LepGumb:
            text: 'Igraj'
            on_release: app.zacni_dva_igralca()
            pos_hint: {'center_x': 0.75, 'center_y': 0.14}

<IgraZaslon>:
    deska: deska
    BoxLayout:
        canvas:
            Color:
                rgba: 0.5, 0, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: '10sp'
        RelativeLayout:
            size_hint: 1, None
            height: '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            BarvniLabel:
                text: root.ime_belega
                font_size: '30sp'
                size_hint: 0.4, 1
                background_color: barva_sekundarna if root.deska.na_potezi == Stanje.BELO else [0, 0, 0, 0]
                pos_hint: {'center_x': 0.2, 'center_y': 0.5}
            Zeton:
                source: 'grafika/beli_zeton.png'
                text: '10'
                pos_hint: {'center_x': 0.45, 'center_y': 0.5}
            Label:
                color: 0,0,0,1
                text: str(root.deska.stevilo_belih)
                id: 'labela'
                pos_hint: {'center_x': 0.45, 'center_y': 0.5}
            Zeton:
                source: 'grafika/crni_zeton.png'
                pos_hint: {'center_x': 0.55, 'center_y': 0.5}
            Label:
                color: 1,1,1,1
                text: str(root.deska.stevilo_crnih)
                pos_hint: {'center_x': 0.55, 'center_y': 0.5}
            BarvniLabel:
                text: root.ime_crnega
                font_size: '30sp'
                size_hint: 0.4, 1
                background_color: barva_sekundarna if root.deska.na_potezi == Stanje.CRNO else [0, 0, 0, 0]
                pos_hint: {'center_x': 0.8, 'center_y': 0.5}
        AnchorLayout:
            size_hint_y: None
            height: self.parent.height - sp(170)
            Deska:
                id: deska
        LepGumb:
            text: 'Kon\u010Daj igro'
            font_size: '20sp'
            on_release: app.koncaj_igro()
            size: '150sp', '65sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Widget: #Bottom margin
            size_hint: None, None
            size: '1sp', 0

<Polje>
    source: 'grafika/' + self.stanje + self.stil + '.png'
    size_hint: 0.125, 0.125

<Deska>
    size_hint: None, None
    velikost: min(self.parent.width, self.parent.height)
    size: self.velikost, self.velikost

<PravilaZaslon>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Pravila'
            font_size: '20sp'
        Label:
            text: 'TODO: indepth rule explanation'
            font_size: '12sp'
        Button:
            text: 'Back'
            on_release: root.manager.current = 'meni'

<LepWidget@Widget>:
    color: 0, 0, 0, 1
    background_color: 0, 0, 0, 0
    izbrana_barva: 1, 0.8, 1, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: barva_primarna
        RoundedRectangle:
            pos: self.pos[0] + sp(3), self.pos[1] + sp(3)
            size: self.size[0] - sp(6), self.size[1] - sp(6)
        Color:
            rgba: self.izbrana_barva if self.state == 'down' else [1, 1 ,1 , 1]
        RoundedRectangle:
            pos: self.pos[0] + sp(6), self.pos[1] + sp(6)
            size: self.size[0] - sp(12), self.size[1] - sp(12)

<LepRadio@LepWidget+ToggleButton>:
    size_hint: None, None
    size: '154sp', '100sp'
    font_size: '25sp'
    izbrana_barva: 0.8, 1, 0.8, 1

<LepGumb@LepWidget+Button>:
    size_hint: None, None
    size: '231sp', '100sp'
    font_size: '25sp'
    izbrana_barva: 1, 0.8, 1, 1

<Zeton@Image>:
    size_hint: None, None
    size: '65sp', '65sp'

<BarvniLabel@Label>:
    background_color: 0.5, 0.5, 0.5, 1
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos[0] + sp(10), self.pos[1] + sp(5)
            size: self.size[0] - sp(20), self.size[1] - sp(10)

<DialogKonec>
    background_color: 0,0,0,0
    size_hint: .5, .5
    BoxLayout
        orientation: 'vertical'
        Label:
            text: '[color=#ffffff][b]  Zelis igrati ponovno? [/b][/color]'
            markup: True
            font_size: '30sp'
            size: self.texture_size
            background_color: 'green'
        RelativeLayout
            LepGumb:
                text: 'Glavni meni'
                size_hint: .4, .4
                pos_hint: {'center_x': 0.25, 'center_y': 0.5}
                on_release: app.koncaj_igro()
                on_release: root.dismiss()
            LepGumb:
                text: 'Igraj znova'
                size_hint: .4, .4
                pos_hint: {'center_x': 0.75, 'center_y': 0.5}
                on_release: app.zacni_dva_igralca()
                on_release: root.dismiss()